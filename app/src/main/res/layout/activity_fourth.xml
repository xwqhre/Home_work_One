<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_fourth">

    <com.google.android.material.button.MaterialButton
        android:text="@string/end"
        android:id="@+id/button_fourth"
        android:layout_width="122dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/purple_200"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_fourth_name"
        android:gravity="center"
        android:textSize="30sp"
        android:text="@string/nameFourth"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="122dp"
        android:layout_height="56dp"/>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/textview_fourthCenter"
        android:gravity="center"
        android:textSize="26sp"
        android:text="@string/surnameFourth"
        android:background="@drawable/edittext_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_fourth_name"
        android:layout_width="122dp"
        android:layout_height="56dp"/>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/textview_fourth_age"
        android:gravity="center"
        android:textSize="26sp"
        android:text="@string/ageFourth"
        android:background="@drawable/edittext_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_fourthCenter"
        android:layout_width="122dp"
        android:layout_height="56dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>